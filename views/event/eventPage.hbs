{{!-- ---------COMMENT SHOW---------- --}}

{{#each event.comments}}
<div class="card">
  <div class="card-header">
    <h5>{{this.commentTitle}}</h5>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{this.commentBody}}</p>
      <footer class="blockquote-footer">{{this.commentAuthor}}</footer>
    </blockquote>
  </div>
</div>

    <h5>{{this.commentTitle}}</h5>
   <p>{{this.commentBody}}</p>
   <small><p>{{this.commentAuthor}}</p></small>
  {{/each}}
</div>

