  {{!-- _________Filter and search function________ --}}
  <div class="card-resizer my-5">
    <div class="d-flex card search text-white">
        <h4 class="card-title text-center">Search for Events</h4>


        <form method="GET" action="/event-search">
        <div class="d-flex bd-highlight">
          <div class="p-2 flex-grow-1 bd-highlight"><input class="search form-control" type="text" name="search"></div>
          <div class="p-2 bd-highlight"><select class="form-control" id="querySearchOptions" name='type'>
                      <option selected="true" disabled="disabled" value="event">Search by</option>
                      <option value="artist">Artist</option>
                      <option value="genre">Genre</option>
                      <option value="city">City</option>
                    </select>
          </div>
           <div class="p-2 bd-highlight">
            <button class="btn btn-outline-success">Search</button>
          </div>
        </div>
        </form>
    </div>
</div>

{{!-- _________Filter and search function________ --}}

<div class="cardGrid">
  {{#each eventList}}
  <div class="card border-0" style="width: 18rem;">
    <img src="{{this.imageURL}}" class="card-img-top" alt="Event Image">
    <div class="card-body">
      <h5 class="card-title">{{this.eventName}}</h5>
      <p class="card-text">{{this.description}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Genre: {{this.genre}}</li>
      <li class="list-group-item">City: {{this.city}}</li>
      <li class="list-group-item"><a href="{{this.ticketURL}}" class="card-link">Buy Ticket</a></li>
    </ul>

    <div class="card-body">
      <a href="/eventPage/{{this._id}}">Event Details</a>
    </div>

  </div>

  {{/each}}
</div>
