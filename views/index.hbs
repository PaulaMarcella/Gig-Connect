<p>Here will be listed all the available events.</p>

{{#each eventList}}

<div class="card" style="width: 18rem;">
  <img src="{{this.imageURL}}" class="card-img-top" alt="Event Image">
  <div class="card-body">
    <h5 class="card-title">{{this.eventName}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Genre: {{this.genre}}</li>
    <li class="list-group-item">Location: {{this.location}}</li>
    <li class="list-group-item"><a href="{{this.ticketURL}}" class="card-link">Buy Ticket</a></li>
  </ul>
</div>

{{/each}}