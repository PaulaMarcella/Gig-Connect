<br>
<div class="cardGrid">
{{#each eventList}}
<div class="card" style="width: 18rem;">
  <img src="{{this.imageURL}}" class="card-img-top" alt="Event Image">
  <div class="card-body">
    <h5 class="card-title">{{this.eventName}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Genre: {{this.genre}}</li>
    <li class="list-group-item">Location: {{this.location}}</li>
    <li class="list-group-item"><a href="{{this.ticketURL}}" class="card-link">Buy Ticket</a></li>
  </ul>

  <div class="card-body"> 
    <a href="/eventPage/{{this._id}}">Edit Event Details</a>
    <br>
    <a href="/eventPage/{{this._id}}" class="text-danger">Delete Event</a>
  </div>
  
</div>
<br>
{{/each}}
</div>
<br>